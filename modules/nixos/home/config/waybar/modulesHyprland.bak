{ 
    "hyprland/workspaces": {
    	"active-only": false,
    	"all-outputs": true,
	    "format": "{icon}",
	    "show-special": false,
	    "on-click": "activate",
	    "on-scroll-down": "hyprctl dispatch workspace e+1",
	    "on-scroll-up": "hyprctl dispatch workspace e-1",
        "persistent-workspaces": {
        "*": 5
	    },
	    "format-icons": {
    		"active": "",
	    	"default": ""
	    }
    },

	"hyprland/window": {
    	"format": "{}",
	    "max-length": 25,
	    "separate-outputs": true,
	    "offscreen-css": true,
    	"offscreen-css-text": "(inactive)",
	    "rewrite": {
		    "(.*) — Mozilla Firefox": " $1",
		    "(.*) - fish": "> [$1]",
		    "(.*) - zsh": "> [$1]",
		    "(.*) - $term": "> [$1]"
	    }
    }
}